generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid     Int       @id @default(autoincrement())
  github  String    @unique
  posts   Post[] // 생성 post 배열
  Session Session[]
  Account Account[]
}

model Post {
  pid    Int      @id @default(autoincrement())
  txt    String // 생성 문장
  star   Int // 좋아요
  starID User[] // 좋아요를 누른 ID 배열
  cards  Card[] // Card 배열
  time   DateTime
}

model Card {
  cID     Int    @id @default(autoincrement())
  url     String // image URL 
  desc    String
  Post    Post?  @relation(fields: [postPid], references: [pid])
  postPid Int?
}

